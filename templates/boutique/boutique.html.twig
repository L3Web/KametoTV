{% extends 'base.html.twig' %}

{% block title %}Boutique !{% endblock %}

{% block body %}
   {% if quantity >= 0 %}
      {% for product in ProductAll %}

      <div class="card display-inline mb-1" style="width: 18rem; height: 20rem; display: inline-block; margin-bottom: 1rem;">
         <img class="card-img-top" alt="Card image cap" src='media/{{ product.Image }}' >
         <p class="card-text" style="text-align: center"> {{ product.productName }} -  {{ product.price }}â‚¬</p>
      </div>

      {% endfor %}
   {% endif %}

   {% if is_granted('ROLE_ADMIN') %}
      <div class="mx-auto mb-5">
         <button class="btn btn-primary">
            <a href="{{ path('app_addProd') }}" class="text-white">Ajouter un produit</a>
         </button>
      </div>
   {% endif %}


{% endblock %}