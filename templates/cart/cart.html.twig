{% extends "base.html.twig" %}
    {% block title %}Panier !{% endblock %}

    {% block body %}

        {% if items | length > 0%}
            <table>
                <thead>
                    <tr>
                        <th>Produit</th>
                        <th>Prix</th>
                        <th>Quantit√©</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.product.ProductName }}</td>
                            <td>{{ item.product.Price }}</td>
                            <td>{{ item.quantity }}</td>
                            <td>{{  item.product.Price * item.quantity }}</td>
                            <td>
                                <a href="{{ path('app_remove',{'id' : item.product.Id}) }}" class="btn btn-danger bnt-sm">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-right">Total :
                        </td>
                        <td>{{ total }}</td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        {% else %}
            <p>Malheureusement votre Panier est vide ...</p>
        {% endif %}

    {% endblock  %}