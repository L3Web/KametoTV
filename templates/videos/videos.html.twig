{% extends "base.html.twig" %}
{% block title %}Videos{% endblock %}
{% block body %}

    <h1 class="mb-5 mt-4 text-center">{% trans %}Video previews {% endtrans %}
        <a class="btn btn-global text-white col-1" href="https://www.youtube.com/c/KoteiKameto">{% trans %}See more{% endtrans %}</a></h1>
    <div class="d-flex justify-content-center mb-5">
        <div class="container">
            <div class="row d-flex justify-content-center my-auto">
                {% for i in 0..(videoId|length-1) %}
                    <div class="col-5 ml-2 mr-2">
                        <h6 class="mb-3 text-center text-truncate">{{ titleId[i] }}</h6>
                        <iframe width="444" height="250" src="https://www.youtube.com/embed/{{ videoId[i] }}" allow="accelerometer; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen>
                        </iframe>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>





{% endblock %}